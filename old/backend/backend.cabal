name:          backend
version:       1.0.0
cabal-version: >= 1.8
build-type:    Simple

executable          slownews-backend
    hs-source-dirs: src
    main-is:        SlowNews/Main.hs
    ghc-options:    -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates -Wmissing-import-lists
                    -threaded -O2 -rtsopts -with-rtsopts=-N
    extensions:     OverloadedStrings
    other-modules:  SlowNews.Stack
                  , SlowNews.App
                  , SlowNews.Site
                  , SlowNews.HackerNews
                  , SlowNews.Reddit
    build-depends:  base   >= 4      && < 5
                  , aeson
                  , aeson-casing
                  , async
                  , bytestring
                  , common
                  , containers
                  , directory
                  , envy
                  , filepath
                  , http-client >= 0.5
                  , katip
                  , lens
                  , lens-aeson
                  , lifted-async
                  , lifted-base
                  , raw-strings-qq
                  , safe-exceptions >= 0.1
                  , scotty
                  , stm
                  , text
                  , time
                  , transformers
                  , wai-extra
                  , wai-middleware-static
                  , wreq
