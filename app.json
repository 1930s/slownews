{
    "name": "SlowNews",
    "repository": "https://github.com/srid/slownews",
    "env": {
        "ELM_COMPILE": "make client",
        "MIX_ENV": "prod",
        "SITES": {
            "description": "List of supported sites to fetch",
            "value": "hn:r/programming:r/haskell"
        },
        "CACHE_DURATION": {
            "description": "Frequency of fetching upstream content",
            "value": "1h"
        }
    },
    "buildpacks": [
        {
            "url": "https://github.com/HashNuke/heroku-buildpack-elixir.git"
        },
        {
            "url": "https://github.com/srid/heroku-buildpack-elm.git"
        }
    ]
}
